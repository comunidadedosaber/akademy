<?xml version="1.0"?>
<form> 
    <label id="labr1" colspan="4" xalign="0.0" string="IDENTIFICAÇÃO"/>
    <group id="grpday1" colspan="4" col="4">    
        <label name="name"/>
        <field name="name"/>  
        <label name="code"/>
        <field name="code"/>  
    </group>  
    <!-- <label name="company" invisible="1"/> -->
    <field name="company" invisible="1"/>
    <!--
        <label id="labr2" colspan="4" xalign="0.0" string="IDENTIFICAÇÃO"/>
    -->
    <group id="grpday2" colspan="4" col="4">            
        <label name="lective_year"/>
        <field name="lective_year"/>
        <label name="classe"/>
        <field name="classe"/>
        <label name="time_course"/>
        <field name="time_course"/>  
        <label name="modality"/>    
        <field name="modality"/> 
        <label name="studyplan"/>
        <field name="studyplan"/>  
        <label name="coordinator"/>    
        <field name="coordinator"/>
    </group>       
    <label id="labr3" colspan="4" xalign="0.0" string="CRITÉRIO"/>
    <group id="grpday3" colspan="4" col="4"> 
        <label name="max_student"/>  
        <field name="max_student"/>    
        <label name="max_teacher"/>    
        <field name="max_teacher"/>
    </group>    
    <notebook colspan="4">
        <page string="HORÁRIO" id="classe_timerule">
            <field name="classe_timerule" mode="tree,form" colspan="2" 
                view_ids="akademy.classe_timerule_view_list,akademy.classe_timerule_view_form"/>
        </page>
        <page string="LISTAR DISCENTES" id="classe_student">
            <field name="classe_student" mode="tree,form" colspan="4" 
                view_ids="akademy.classe_student_view_list,akademy.classe_student_view_form"/>
        </page>
        <page string="LISTAR DOCENTES" id="classe_teacher">
            <field name="classe_teacher" mode="tree,form" colspan="4" 
                view_ids="akademy.classe_teacher_view_list,akademy.classe_teacher_view_form"/>
        </page>
        <page string="PLANO DE AULA" id="classe_lesson">
            <field name="classe_teacher_lesson" mode="tree,form" colspan="4" 
                view_ids="akademy.classes_teacher_lesson_view_list,akademy.classes_teacher_lesson_view_form"/>
        </page>
        <page string="AVALIAÇÕES" id="student_grades">
            <field name="stundent_grades" mode="tree,form" colspan="4" 
                view_ids="akademy.classe_student_grades_view_list,akademy.classe_student_grades_view_form"/>
        </page>
        <page string="PAUTAS" id="classes_grades">
            <field name="classes_grades" mode="tree,form" colspan="4" 
                view_ids="akademy.classes_grades_view_list,akademy.classes_grades_view_form"/>
        </page>
    </notebook>
</form>
