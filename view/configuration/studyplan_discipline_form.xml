<?xml version="1.0"?>
<form>
    <label id="labr1" colspan="4" xalign="0.0" string="IDENTIFICAÇÃO"/>
    <group id="grpday1" colspan="4" col="4">
        <label name="studyplan"/>
        <field name="studyplan"/>  
        <label name="discipline"/>
        <field name="discipline"/> 
    </group>
    <label id="labr2" colspan="4" xalign="0.0" string="CRITÉRIO DA DISCIPLINA"/>
    <group id="grpday2" colspan="4" col="6">
        <label name="quarter"/>
        <field name="quarter"/>     
        <label name="state"/>
        <field name="state"/>    
        <label name="modality"/>
        <field name="modality"/>
    </group>   
    <label id="labr3" colspan="4" xalign="0.0" string="CRITÉRIO DE APROVAÇÃO"/>
    <group id="grpday3" colspan="4" col="6">      
        <label name="hours"/>
        <field name="hours"/>     
        <label name="flaut"/>
        <field name="flaut"/>     
        <label name="average"/>
        <field name="average"/> 
    </group>   
    <notebook colspan="4">
        <page string="Descrição" id="description">
            <field name="description" colspan="4"/>
        </page>
        <page string="Disciplina Atencedentes" id="discipline_precedentes">
            <field name="discipline_precedentes" mode="tree,form" colspan="2"
                view_ids="akademy.discipline_precedents_view_tree,akademy.discipline_precedents_view_form"/>
        </page>
        <page string="Disciplina Avaliações" id="discipline_avaliation">
            <field name="studyplan_avaliations" mode="tree,form" colspan="2"
                view_ids="akademy.studyplan_avaliation_view_list,akademy.studyplan_avaliation_view_form"/>
        </page>
    </notebook>
</form>
