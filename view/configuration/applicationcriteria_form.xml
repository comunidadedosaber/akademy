<?xml version="1.0"?>
<form>
    <group id="application_criteria" colspan="4" col="6">    
        <label name="name"/>
        <field name="name"/>  
        <label name="code"/>
        <field name="code"/> 
        <label name="lective_year"/>
        <field name="lective_year"/>
        <label name="academic_level"/>
        <field name="academic_level"/>
        <label name="area"/>
        <field name="area"/>
        <label name="course"/>
        <field name="course"/>  
    </group>  
    <group id="criteria_info" colspan="4" col="6">                      
        <label name="course_classe"/>
        <field name="course_classe"/>
        <label name="student_limit"/>
        <field name="student_limit"/> 
        <label name="average"/>
        <field name="average"/>
        <label name="phase"/>
        <field name="phase"/> 
        <label name="age"/>
        <field name="age"/>
    </group>        
    <group id="description" colspan="4" col="4">            
        <field name="description" colspan="4"/> 
    </group>
    <notebook colspan="4">
        <page string="LISTA DE CANDIDATOS" id="application_result">
            <field name="application_result" mode="tree" colspan="4"
                view_ids="akademy.applications_result_view_tree"/>
        </page>
    </notebook>
</form>
